{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "xmake build [debug]",
            "type": "shell",
            "command": "xmake",
            "args": [
                "f",
                "-m",
                "debug",
                "-y",
                "&&",
                "xmake"
            ],
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "label": "xmake build [release]",
            "type": "shell",
            "command": "xmake",
            "args": [
                "f",
                "-m",
                "release",
                "-y",
                "&&",
                "xmake"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "xmake run",
            "type": "shell",
            "command": "xmake",
            "args": [
                "run"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "xmake clean",
            "type": "shell",
            "command": "xmake",
            "args": [
                "clean"
            ]
        }
    ]
}